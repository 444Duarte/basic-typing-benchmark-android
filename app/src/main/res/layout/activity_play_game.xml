<?xml version="1.0" encoding="utf-8"?>
<android.widget.TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuwien.buildinginteractioninterfaces.typingbenchmark.presentation.AbstractPlayGame">

    <android.widget.GridLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_next_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_word"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/next_word"
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="@string/place_holder_text"
                />

        </LinearLayout>

        <include layout="@layout/benchmarks_ingame_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </android.widget.GridLayout>

    <include layout="@layout/play_input_menu" />


</android.widget.TableLayout>
