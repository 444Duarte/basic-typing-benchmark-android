<?xml version="1.0" encoding="utf-8"?>
<android.widget.TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuwien.buildinginteractioninterfaces.prototype.presentation.PlayGame">

    <android.widget.TableLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next word:"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Place holder text"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_velocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Velocity (chars/sec)" />

                <TextView
                    android:id="@+id/label_failed_chars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Failed chars"
                    tools:layout_editor_absoluteX="165dp"
                    tools:layout_editor_absoluteY="53dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/velocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/holo_green_dark"
                    tools:layout_editor_absoluteX="301dp"
                    tools:layout_editor_absoluteY="9dp" />

                <TextView
                    android:id="@+id/failed_chars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/holo_red_dark"
                    tools:layout_editor_absoluteX="301dp"
                    tools:layout_editor_absoluteY="53dp" />

            </LinearLayout>
        </LinearLayout>

    </android.widget.TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place holder text" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Game" />
    </LinearLayout>


</android.widget.TableLayout>
