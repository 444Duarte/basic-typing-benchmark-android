<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "24dp"
        android:layout_marginBottom="6dp"
        android:textSize="18sp"
        android:text="Choose a game mode:"/>

    <RadioGroup
        android:id="@+id/game_mode_group"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/main_menu_time"
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton android:id="@+id/main_menu_num_words"
            android:text="Number of words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/main_menu_errors"
            android:text="Number of errors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/main_menu_correct_words"
            android:text="Number of correct words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/main_menu_text"
            android:text="Text Sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"/>
        <RadioButton
            android:id="@+id/main_menu_no_end"
            android:text="No end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <CheckBox
        android:id="@+id/main_menu_autocorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto-correct"
        android:checked="true"/>

    <LinearLayout
        android:id="@+id/number_input_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_main_menu_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time (seconds)"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="60"
            android:inputType="numberDecimal" />
    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_create_game"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"/>
    </GridLayout>
</LinearLayout>
