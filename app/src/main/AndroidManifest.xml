<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuwien.buildinginteractioninterfaces.prototype">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:versionCode="@string/versionCode"
        android:versionName="@string/versionCode"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".presentation.PlayGame"
            android:parentActivityName=".presentation.MainMenu"/>

        <activity android:name=".presentation.MainMenu"
            />

        <activity
            android:name=".presentation.BenchmarksListActivity"
            android:parentActivityName=".presentation.MainMenu"/>

        <activity
            android:name=".presentation.SplashActivity"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".presentation.BenchmarkActivity" />
        <activity android:name=".presentation.AboutActivity"
            android:parentActivityName=".presentation.MainMenu"/>
    </application>

</manifest>